script/source = "extends CombatVisualUnit


@export var arrow_pscene: PackedScene

@onready var animated_sprite: AnimatedSprite2D = %AnimatedSprite2D
@onready var walk_along_path: CombatVisualUnitWalkAlongPath = %WalkAlongPath
@onready var face_walk_direction: CombatVisualUnitFaceWalkDirection = %FaceWalkDirection


const IDLE_SPRITE_OFFSET := Vector2(-1.0, -3.0)
const RANGED_SPRITE_OFFSET := Vector2(2.5, -10.5)
const ARROW_OFFSET := Vector2(11.0, -13.5)


func idle(action: CombatVisualUnitActionGoIdle):
	go_idle()
	animated_sprite.scale = Vector2(
		abs(animated_sprite.scale.x) if cos(action.enemy_direction) > 0 else -abs(animated_sprite.scale.x),
		animated_sprite.scale.y
	)


func walk(action: CombatVisualUnitActionWalk):
	animated_sprite.play(\"walk\")
	face_walk_direction.set_process(true)
	await walk_along_path.walk(action)
	face_walk_direction.set_process(false)
	go_idle()


func hurt(action: CombatVisualUnitActionHurt):
	animated_sprite.play(\"hurt\")
	await animated_sprite.animation_finished
	go_idle()


func ranged(action: CombatVisualUnitActionRanged):
	animated_sprite.play(\"ranged\")
	animated_sprite.offset = RANGED_SPRITE_OFFSET
	await animated_sprite.animation_finished
	var arrow = arrow_pscene.instantiate() as CombatVisualProjectile
	arrow.position = physical_node.position + ARROW_OFFSET
	arrow.target = action.target
	add_sibling(arrow)
	await arrow.target_reached


func go_idle():
	animated_sprite.play(\"idle\")
	animated_sprite.offset = IDLE_SPRITE_OFFSET
"

